/* app.wxss */
page {
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用卡片 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #FFFFFF;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-secondary {
  background: #F0F2F5;
  color: #666666;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

.btn-outline {
  background: transparent;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
  border-radius: 48rpx;
  padding: 22rpx 46rpx;
  font-size: 32rpx;
}

/* 文本样式 */
.text-primary {
  color: #4A90E2;
}

.text-secondary {
  color: #666666;
}

.text-success {
  color: #52C41A;
}

.text-warning {
  color: #FAAD14;
}

.text-danger {
  color: #FF4D4F;
}

.text-muted {
  color: #999999;
}

/* 间距类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }
.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

/* Flex布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.tag-primary {
  background: #E6F7FF;
  color: #1890FF;
}

.tag-success {
  background: #F6FFED;
  color: #52C41A;
}

.tag-warning {
  background: #FFFBE6;
  color: #FAAD14;
}

.tag-gray {
  background: #F5F5F5;
  color: #999999;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #E8E8E8;
  margin: 20rpx 0;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
}

/* 状态标识 */
.status-badge {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #FFFBE6;
  color: #FAAD14;
}

.status-paid {
  background: #E6F7FF;
  color: #1890FF;
}

.status-in_progress {
  background: #E6FFFB;
  color: #13C2C2;
}

.status-completed {
  background: #F6FFED;
  color: #52C41A;
}

.status-cancelled {
  background: #FFF2F0;
  color: #FF4D4F;
}
